<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/items">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:background="@drawable/profile_line"
        android:layout_marginTop="27dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/rubik_semibold"
            android:gravity="center"
            android:paddingStart="65dp"
            android:text="Личный кабинет"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/login_lbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:fontFamily="@font/rubik_medium"

        android:text="Войти"
        android:gravity="center|center_horizontal"
        android:onClick="LogIn"
        android:textColor="@color/white"

        android:textSize="25sp"
        tools:ignore="RtlSymmetry"
        android:focusable="true" />


</LinearLayout>
    <TextView
        android:id="@+id/user_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Номер телефона"
        android:fontFamily="@font/rubik_medium"
        android:textSize="20sp"
        android:textColor="@color/phone_nav"
        android:paddingStart="65dp"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
   >
    <Button
        android:id="@+id/main_win"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:background="#00FFFFFF"
        android:drawablePadding="70dp"
        android:fontFamily="@font/rubik_light"
        android:paddingTop="40dp"
        android:text="Главная"
        android:onClick="toMain"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="22sp"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"

        >

        <Button
            android:id="@+id/user_tickets"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:background="#00FFFFFF"
            android:drawableEnd="@drawable/rightarrowprofile"
            android:drawablePadding="70dp"
            android:fontFamily="@font/rubik_light"
            android:paddingTop="40dp"
            android:text="Билеты"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="22sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/user_bookings"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:background="#00FFFFFF"
            android:paddingTop="15dp"
            android:drawableEnd="@drawable/rightarrowprofile"
            android:drawablePadding="30dp"
            android:fontFamily="@font/rubik_light"
            android:text="Брони"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="22sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/user_edit"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:background="#00FFFFFF"
            android:paddingTop="15dp"
            android:drawableEnd="@drawable/rightarrowprofile"
            android:drawablePadding="30dp"
            android:fontFamily="@font/rubik_light"
            android:text="Редактировать"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="22sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom|center">
        <Button
            android:id="@+id/user_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logout"
            android:fontFamily="@font/rubik_light"
            android:text="Выйти"
            android:layout_marginBottom="15dp"
            android:gravity="bottom|center"
            android:textAllCaps="false"
            android:paddingBottom="10dp"
            android:textColor="@color/white"
            android:onClick="ClickLogOut"
            android:textSize="22sp" />

    </LinearLayout>

